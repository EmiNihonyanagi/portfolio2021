//- META INFORMATION
- const page_title = 'ホテルのコーポレートサイト'
- const relativePath = '..'
- const meta_title = 'ホテルのコーポレートサイト'
- const meta_description = 'Emi Nihonyanagi Portfolioサイト　ホテルのコーポレートサイトの案件内容'
- const currentPage = 'portfolio'
- const fvTitle = 'ホテルのコーポレートサイト'
- const fvText = 'リニューアル案件'


//- EXTERNAL LIBRARIES
- const isJquery = true
- const isWowEffects = true
- const isPolyfill = true

doctype html
html(lang="ja")
    head
        //- HEAD
        include ../_inc/_head.pug
    body(class=`${currentPage}`)#top
        div(ontouchstart="")
            include ../_inc/_siteHeader.pug

            //- FV
            include ../_inc/_pageFv.pug

            //- MAIN CONTENT
            main.main
                section.page__portfolio
                    .page__portfolio-detail.container

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 案件の概要
                            p.main__text #{fvTitle} <br>#{fvText}

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 担当範囲
                            ul.page__portfolio-list
                                li.page__portfolio-listItem WordPress新規テーマ構築
                                li.page__portfolio-listItem 脆弱性対応
                                li.page__portfolio-listItem インフラ、外注先への指示出し等の進行管理
                                li.page__portfolio-listItem デバッグ作業
                                li.page__portfolio-listItem ディレクター補佐

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 案件の機能
                            .page__portfolio-box
                                ul.page__portfolio-list
                                    -
                                        let portfolio_listItem = [
                                                {work: "", text: "WordPress→HTML変換"},
                                                {work: "", text: "同一サーバー内の同期処理"},
                                                {work: "myWork", text: "IPアドレス制限"},
                                                {work: "", text: "お気に入り機能 REST API連携"},
                                                {work: "myWork", text: "全投稿内容をAdvanced Custom Fieldsの柔軟コンテンツで構築"},
                                                {work: "myWork", text: "内部SEO対策"},

                                            ];
                                    each item in portfolio_listItem
                                        if (item.work == "myWork")
                                            li.page__portfolio-listItem(class=`${item.work}`) #{item.text}
                                        else
                                            li.page__portfolio-listItem(class=`${item.work}`) #{item.text}
                            p.page__portfolio-notes ※ ○がついている箇所が担当箇所です。

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 技術
                            p.main__text HTML/CSS/javascript/WordPress

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 規模
                            p.main__text 100ページ

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP チーム体制
                            ul.page__portfolio-list
                                li.page__portfolio-listItem ディレクター 1名
                                li.page__portfolio-listItem コーダー 1名
                                li.page__portfolio-listItem インフラ 1名

                        .page__portfolio-detailItem.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.4s")
                            h2.main__titleJP 案件で工夫した点・難しかった点
                            .page__portfolio-box
                                p.main__text 全てのテキストや画像を管理画面から行えるようAdvanced Custom Fieldsにて柔軟コンテンツにて構築<br>HTMLで表示させる必要があったため静的ファイルへ変換後に問題が起きないようjsで対応
                                p.main__text サーバー内が1サーバーに複数サイトを分割して運用をおこなっているため5GBの制約のため
                                p.main__text 最小限のファイルサイズになるよう構築<br>HTML変換処理の際、動作が著しく遅くなるため負荷がインフラ担当者と負荷状況を確認し、サーバー負荷の軽減する処理へ変換するよう指示出しを行いました

            //- FOOTER
            include ../_inc/_siteFooter.pug
